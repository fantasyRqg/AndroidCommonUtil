<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SideView">
        <attr name="leftText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="focusColor" format="color"/>
        <attr name="unfocusColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="textPaddingVertical" format="dimension"/>
        <attr name="textPaddingHorizontal" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="SingleView">
        <attr name="active_color" format="color"/>
        <attr name="negative_color" format="color"/>
        <attr name="column_count" format="integer"/>
        <attr name="gap_ratio" format="float"/>
        <attr name="start_ratio" format="float"/>
    </declare-styleable>
</resources>